<?xml version="1.0"?>
<launch>

    <arg name="input_scans" default="[base_scan_0, base_scan_1]"/>
    <arg name="output_scan" default="/scan_unified"/>

    <!-- delete old parameters -->
    <rosparam command="delete" param="/move_base"/>

    <!-- common navigation launch file -->
    <arg name="map" default="/home/banos/catkin_ws/src/navigation_experiments/map/default/map.yaml" />
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map)"/>

    <!-- particle filter localization -->
    <node pkg="fake_localization" type="fake_localization" name="fake_localization_node">
        <remap from="scan" to="scan_unified"/>
    </node>

    <!-- run scan unifier -->

    <node pkg="cob_scan_unifier" type="scan_unifier_node" name="scan_unifier" output="log">
        <rosparam subst_value="True" param="input_scans">$(arg input_scans)</rosparam>
	<remap from="scan_unified" to="$(arg output_scan)"/>
    </node>

    <!-- move_base navigation -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <!-- planner selection parameter -->
        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>

        <!-- move_base parameters -->
        <rosparam file="/home/banos/catkin_ws/src/navigation_experiments/config/move_base/move_base_params.yaml" command="load" />

        <!-- global costmap parameters -->
        <rosparam file="/home/banos/catkin_ws/src/navigation_experiments/config/move_base/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="/home/banos/catkin_ws/src/navigation_experiments/config/move_base/global_costmap_params.yaml" command="load" />

        <!-- local costmap parameters -->
        <rosparam file="/home/banos/catkin_ws/src/navigation_experiments/config/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="/home/banos/catkin_ws/src/navigation_experiments/config/move_base/local_costmap_params.yaml" command="load" />

    </node>

</launch>
